<h1>Sign Up</h1>
<div class="form">

<form method="POST" action="/auth/signup">

  <div class="field" >
    <label>Email</label>
    <input type="text" name="email"/>
  </div>

  <div class="field" >
    <label>Password</label>
    <input type="password" name="password"/>
  </div>

  {{> errorMessages}}

  <div class="field submit">
    <button type="submit">Sign up</button>
  </div>
</form>
</div>